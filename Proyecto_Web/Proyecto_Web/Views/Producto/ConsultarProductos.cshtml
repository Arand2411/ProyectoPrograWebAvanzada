@model List<Proyecto_Web.Entities.Producto>

@{
    ViewData["Title"] = "Productos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body register-card-body">
    <h4 class="text-center">Productos Tecnológicos</h4>
    <hr><br />

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card h-100">
                    <div style="text-align:center">
                        <img class="card-img-top" src="@item.Ruta_Imagen" alt="Imagen del producto"
                             style="width: 100%; height: 150px; object-fit: contain; object-position: center; margin-top: 20px;">
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Descripcion</h5>
                        <p class="card-text">Precio: ¢ @item.Precio</p>
                        <p class="card-text">Cantidad: @item.Cantidad</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("ActualizarProducto", "Producto", new { id = item.IdProducto })" class="btn btn-outline-primary">
                            <i class="fa fa-edit"></i> Editar
                        </a>
                        <a href="@Url.Action("EliminarProducto", "Producto", new { id = item.IdProducto })" class="btn btn-outline-danger" onclick="return confirm('¿Estás seguro de que deseas eliminar este producto?');">
                            <i class="fa fa-trash"></i> Eliminar
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="~/js/ConsultaProductos.js"></script>
